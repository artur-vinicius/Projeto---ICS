CREATE DATABASE Locus;

CREATE TABLE Sala
(
  Número INT NOT NULL,
  Reservado? BIT NOT NULL,
  Nome VARCHAR(150) NOT NULL,
  PRIMARY KEY (Número)
);

CREATE TABLE Reserva
(
  Dt/Hr TIMESTAMP NOT NULL,
  ID SERIAL NOT NULL
  PRIMARY KEY (ID)
);

CREATE TABLE Usuário
(
  ID SERIAL NOT NULL,
  Nome VARCHAR(150) NOT NULL,
  Senha VARCHAR(50) NOT NULL
  PRIMARY KEY (ID)
);
